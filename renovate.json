{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests"
  ],
  "timezone": "Europe/Paris",
  "schedule": ["* 8-21 * * *"],
  "ignoreTests": true,
  "kubernetes": {
    "managerFilePatterns": ["/k3s/.+\\.ya?ml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/k3s/.+\\.ya?ml$/"]
  },
  "flux": {
    "managerFilePatterns": ["/k3s/.+\\.ya?ml$/"]
  },
  "minimumReleaseAge": "2 days",
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["/.*fluxcd.*/"],
      "groupName": "fluxcd",
      "groupSlug": "fluxcd"
    },
    {
      "matchPackageNames": ["/.*beszel.*/"],
      "groupName": "beszel",
      "groupSlug": "beszel"
    }
  ]
}
